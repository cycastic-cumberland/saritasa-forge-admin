@using Saritasa.NetForge.DomainServices.Extensions
<MudDialog>
    <DialogContent>
        @{
            if (NavigationMetadata.IsCollection)
            {
                var navigationCollection = (IEnumerable<object>)NavigationInstance;

                foreach (var element in navigationCollection)
                {
                    foreach (var property in Properties)
                    {
                        <MudText>@property.Name - @element.GetPropertyValue(property.Name)</MudText>
                    }
                }
            }
            else
            {
                foreach (var property in Properties)
                {
                    <MudText>@property.Name - @NavigationInstance.GetPropertyValue(property.Name)</MudText>
                }
            }
        }
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Close">Close</MudButton>
    </DialogActions>
</MudDialog>
