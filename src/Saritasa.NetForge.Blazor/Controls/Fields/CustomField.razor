@if (PropertyType == typeof(bool) || PropertyType == typeof(bool?))
{
    <MudCheckBox T="bool"
                 Label="@PropertyName"
                 CheckedChanged="value => HandleInputChange(value!, PropertyName)">
    </MudCheckBox>
}
else if (PropertyType.IsEnum)
{
    <MudSelect T="string"
               Label="@PropertyName"
               Class="create-entity__input"
               Variant="Variant.Outlined"
               Placeholder="@PropertyType.ToString()"
               TextChanged="value => HandleInputChange(value, PropertyName)">
        @foreach (var enumValue in Enum.GetNames(PropertyType))
        {
            <MudSelectItem Value="enumValue"></MudSelectItem>
        }
    </MudSelect>
}
else
{
    var isMappingSuccessful = TypeMappingDictionary.TryGetValue(PropertyType, out var inputType);
    <MudTextField T="string"
                  Label="@PropertyName"
                  Class="create-entity__input"
                  Variant="Variant.Outlined"
                  Placeholder="@PropertyType.ToString()"
                  InputType="isMappingSuccessful ? inputType : InputType.Text"
                  TextChanged="value => HandleInputChange(value, PropertyName)">
    </MudTextField>
}
