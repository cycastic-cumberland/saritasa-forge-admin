@using Saritasa.NetForge.Blazor.Extensions
@inherits CustomField

<MudCheckBox Label="@Property.Name.ToMeaningfulName()"
             Disabled="IsReadOnly"
             @bind-Checked="PropertyValue"
             Error="@ComponentErrorModel.IsError"
             ErrorText="@ComponentErrorModel.ErrorMessage">
    <MudText class="mud-input-helper-text ml-3">@Property.Description</MudText>
</MudCheckBox>
