@using Saritasa.NetForge.Blazor.Extensions
@inherits CustomField

<MudTextField T="string"
              Label="@Property.Name.ToMeaningfulName()"
              Variant="Variant.Outlined"
              InputType="InputType.Text"
              HelperText="@Property.Description"
              Disabled="IsReadOnly"
              @bind-Value="PropertyValue"
              Lines="Lines"
              MaxLines="MaxLines"
              AutoGrow="IsAutoGrow"
              Error="@ComponentErrorModel.IsError"
              ErrorText="@ComponentErrorModel.ErrorMessage">
</MudTextField>


