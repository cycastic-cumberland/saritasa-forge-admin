@using Saritasa.NetForge.Blazor.Controls.CustomFields

@if (PropertyType == typeof(bool) || PropertyType == typeof(bool?))
{
    <MudCheckBox Label="@Property.Name"
                 @bind-Checked="PropertyBooleanValue">
        <MudText class="mud-input-helper-text ml-3">@Property.Description</MudText>
    </MudCheckBox>
    
}
else if (PropertyType.IsEnum)
{
    <MudSelect T="string"
               Label="@Property.Name"
               Variant="Variant.Outlined"
               TextChanged="HandleInputChange"
               HelperText="@Property.Description"
               @bind-Value="PropertyValue">
        @foreach (var enumValue in Enum.GetNames(PropertyType))
        {
            <MudSelectItem Value="enumValue" />
        }
    </MudSelect>
}
else if (PropertyType == typeof(DateTime) || PropertyType == typeof(DateTime?)
         || PropertyType == typeof(DateTimeOffset) || PropertyType == typeof(DateTimeOffset?)
         || PropertyType == typeof(DateOnly) || PropertyType == typeof(DateOnly?))
{
    <DateField Property="Property" EntityModel="EntityModel" />
}
else if (PropertyType == typeof(DateOnly) || PropertyType == typeof(DateOnly?))
{
    <MudTextField T="DateTime?"
                  Label="@Property.Name"
                  Variant="Variant.Outlined"
                  InputType="InputType.Date"
                  TextChanged="HandleInputChange"
                  Format="yyyy-MM-dd"
                  HelperText="@Property.Description"
                  @bind-Value="PropertyDateValue">
    </MudTextField>
}
else
{
    <MudTextField T="string"
                  Label="@Property.Name"
                  Variant="Variant.Outlined"
                  InputType="GetInputType(PropertyType)"
                  TextChanged="HandleInputChange"
                  HelperText="@Property.Description"
                  @bind-Value="PropertyValue">
    </MudTextField>
}
