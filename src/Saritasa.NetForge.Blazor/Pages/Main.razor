@using Saritasa.NetForge.UseCases.Metadata.DTOs
@inherits MvvmComponentBase<Saritasa.NetForge.Mvvm.ViewModels.Metadata.MainViewModel>

<PageTitle>NetForge Admin - Main</PageTitle>

<MudTable Items="@ViewModel.Model.EntitiesMetadata" Hover="true" Color="Color.Dark">
    <HeaderContent>
        <MudTh>
            <MudTableSortLabel InitialDirection="SortDirection.Ascending"
                               SortBy="new Func<EntityMetadataDto, object>(x => x.PluralName)">
                <MudText Typo="Typo.h6">Entity Name</MudText>
            </MudTableSortLabel>
        </MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Entity Name">
            <MudText Typo="Typo.subtitle1">@context.PluralName</MudText>
        </MudTd>
        <MudTd DataLabel="Description">
            <MudText Typo="Typo.body2" Class="text--color-hint entities-table__description-text">@context.Description</MudText>
        </MudTd>
    </RowTemplate>
</MudTable>
