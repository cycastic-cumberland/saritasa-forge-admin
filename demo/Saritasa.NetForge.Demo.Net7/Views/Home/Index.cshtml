<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        html, body {
            margin: 0;
            height: 100%;
        }
    </style>
</head>
<body>
@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "h-100 container bg-body-secondary d-flex flex-column justify-content-center align-items-center" }))
{
    <div class="mx-5 row">
        <div class="col">
            <div class="row">
                <label for="username" class="col-2 col-form-label">Email</label>
                <input type="text" class="form-control" id="username" name="username" value="" placeholder="Please input your username">
            </div>
            <div class="row">
                <label for="password" class="col-2 col-form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" value="" placeholder="Please input you password">
            </div>
            <div class="row mt-4 justify-content-center">
                <input type="submit" class="btn btn-primary col-6" value="Login"/>
            </div>
        </div>
    </div>
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>